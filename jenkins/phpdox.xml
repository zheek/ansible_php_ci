<phpdox xmlns="http://phpdox.net/config">
 <project name="name-of-project" source="src" workdir="buildOutput/phpdox">
  <collector publiconly="false">
   <include mask="*.php" />
  </collector>

  <generator output="buildOutput">
   <build engine="html" enabled="true" output="api">
    <file extension="html" />
   </build>
  </generator>
 </project>
</phpdox>

